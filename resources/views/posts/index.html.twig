{% extends "layout/main.html.twig" %}



{% block content %}
    <div class="container">
        {% if posts %}
            {% for post in posts %}
                <div class="row text-center d-flex justify-content-center">
                    <div class="col-6">
                        <div class="card my-5">
                            <h5 class="card-header">May 5 2020</h5>
                            <div class="card-body">
                                <h4 style="font-weight: bold" class="card-title">{{ post.title }}</h4>
                                <p class="card-text">{{ post.description | raw }}</p>
                                <a href="{{ route('posts-show', {id: post.id}) }}" class="btn btn-primary">Read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <h1>No Posts yet</h1>
        {% endif %}
    </div>
{% endblock %}